<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/chartFragment">

    <fragment
        android:id="@+id/newsListFragment"
        android:name="com.example.moexclient.fragments.NewsListFragment"
        android:label="News List"
        tools:layout="@layout/fragment_news_list">
        <action
            android:id="@+id/action_newsListFragment_to_newsFragment"
            app:destination="@id/newsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.moexclient.fragments.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news">
        <argument
            android:name="newsId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/chartFragment"
        android:name="com.example.moexclient.fragments.ChartFragment"
        android:label="Trading"
        tools:layout="@layout/fragment_chart">
        <action
            android:id="@+id/action_chartFragment_to_newsListFragment"
            app:destination="@id/newsListFragment" />
        <action
            android:id="@+id/action_chartFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_chartFragment_to_recordsListFragment"
            app:destination="@id/recordsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.moexclient.fragments.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/recordsListFragment"
        android:name="com.example.moexclient.RecordsListFragment"
        android:label="Records"
        tools:layout="@layout/fragment_records_list" />
</navigation>